<div id="loginbody">
   <header id="loginheader">
      <h1>Sign In</h1>
   </header>

   <div id="loginbody">
      <form id="loginform" method="POST" action="/users/login" enctype="application/x-www-form-urlencoded">
         <div id="log">
            <div id="usr">
               <label>Username</label>
               <input class="login-input" type="text" required name="username"/>
               <br>
            </div>
            <div id="pass">
               <label>Password</label>
               <input class="login-input" type="password" required name="password"/>
               <br>
            </div>
         </div>
         <div id="signbutt">
            <button id="thebutton" type="submit">Sign In</button>
         </div>
      </form>
   </div>
</div>