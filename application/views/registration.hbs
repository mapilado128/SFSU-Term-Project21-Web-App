<div id="regbody">
    <header id="registrationheader">
    <h1>Sign Up</h1>
</header>

<form id="form">
    <div class="formusr" id="formusr">
        <label id="reglabel" for="username">Username</label>
        <div class="form-control">
            <input id="reginput" type="text" placeholder="wAssUp25" id="username" />
        </div>
        <br>
        <label id="reglabel" for="email">Email</label>
        <div class="form-control">
            <input id="reginput" type="email" placeholder="iro_mark@example.com" id="email" />
        </div>
        <br>
        <label id="reglabel" for="password">Password</label>
        <div class="form-control">
            <input id="reginput" type="password" placeholder="Password" id="password" />
        </div>
        <br>
        <label id="reglabel" for="cpassword">Confirm Password</label>
        <div class="form-control">
            <input id="reginput" type="password" placeholder="Confirm Password" id="cpassword" />
        </div>
        <br>
    </div>
    <div class="error" id="error"></div>
    <div id="checkbx">
        <input type="checkbox" required="true" />
        <label id="reglabel">I am 13+ years old</label>
        <br>
        <input type="checkbox" required="true" />
        <label id="reglabel">I have read and accepted the <a href="#">Terms of Services</a> and <a href="#">Privacy Rules</a></label>
        <br>
    </div>
    <button id="regbutton">Sign Up</button>
</form>
</div>
